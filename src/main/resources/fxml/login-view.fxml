<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="402.0" prefWidth="736.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ve.edu.ucab.controllers.LoginViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="402.0" prefWidth="308.0">
         <children>
            <Label fx:id="user1" contentDisplay="CENTER" text="Usuario 1">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region prefHeight="62.0" prefWidth="297.0" />
            <TextField fx:id="campo1" prefHeight="25.0" prefWidth="166.0" promptText="Ingrese su usuario aqui" />
            <Region prefHeight="62.0" prefWidth="297.0" />
            <Label fx:id="confirmacion1" alignment="CENTER" contentDisplay="CENTER" prefWidth="313.0" textAlignment="CENTER">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Button fx:id="login1" mnemonicParsing="false" onAction="#login1" text="login" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="402.0" prefWidth="291.0">
         <children>
            <Label fx:id="confirmError" prefHeight="20.0" prefWidth="338.0" style="-fx-background-color: white;" text="Almenos un usuario de los que ingreso no es valido" textAlignment="CENTER" textFill="RED" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Region prefHeight="79.0" prefWidth="338.0" />
            <Button fx:id="play" mnemonicParsing="false" onAction="#play" style="-fx-background-color: green;" text="Play">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Region prefHeight="79.0" prefWidth="338.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="402.0" prefWidth="308.0">
         <children>
            <Label fx:id="user2" contentDisplay="CENTER" text="Usuario 2">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region prefHeight="62.0" prefWidth="297.0" />
            <TextField fx:id="campo2" promptText="Ingrese su usuario aqui" />
            <Region prefHeight="62.0" prefWidth="297.0" />
            <Label fx:id="confirmacion2" alignment="CENTER" prefHeight="19.0" prefWidth="313.0" textAlignment="CENTER">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Button fx:id="login2" mnemonicParsing="false" onAction="#login2" text="login" />
         </children>
      </VBox>
   </children>
